<!DOCTYPE html>
<html lang="en">
<head>
    <title>{% block head_title %}Business Central | HEPTAconnect{% endblock %}</title>

    {% block head_resources %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
              rel="stylesheet"
              integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
              crossorigin="anonymous">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css"
              rel="stylesheet"
              integrity="sha384-b6lVK+yci+bfDmaY1u0zE8YYJt0TZxLEAFyYSLHId4xoVvsrQu3INevFKo+Xir8e"
              crossorigin="anonymous">

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
                crossorigin="anonymous"
                nonce="{{ nonce }}"></script>

        <link rel="icon" type="image/png" sizes="180x180" href="{{ asset('icon/heptaconnect-logo.png') }}">

        <style type="text/css">
            {% block css %}
                {% sw_include '@WebFrontendPackage/ui/_base/css/sidebar.css' %}
            {% endblock %}
        </style>
    {% endblock %}
</head>

<body class="container-fluid d-flex flex-column vh-100" data-bs-theme="{{ colorScheme }}">

{% block notifications %}
    {% sw_include '@WebFrontendPackage/ui/_base/component/notifications.html.twig' %}
{% endblock %}

{% block top_bar %}
    <div style="height: 50px" class="bg-black bg-opacity-75 border-bottom flex-shrink-0 row text-white">
        <div class="d-flex justify-content-between">
            <div class="d-flex">
                {% block top_bar_left %}{% endblock %}
            </div>

            <div class="d-flex">
                {% block top_bar_right %}
                    <button type="button"
                            class="btn text-white border-0 px-2 py-0 fs-3"
                            data-bs-toggle="dropdown"
                            data-bs-auto-close="outside">
                        <i class="bi bi-person-circle"></i>
                    </button>

                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="{{ path('_access/logout') }}">Sign out</a></li>
                    </ul>
                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}

<div class="flex-grow-1 flex-shrink-1 overflow-scroll row">
    {% block layout %}
        <aside class="sidebar d-flex flex-column p-2 h-100 overflow-scroll border-end{% if sidebarCollapsed %} sidebar-collapsed{% endif %}">
            {% block sidebar %}
                {% sw_include '@WebFrontendPackage/ui/_base/component/sidebar.html.twig' %}
            {% endblock %}
        </aside>

        <main class="col p-0 h-100 overflow-scroll d-flex flex-column">
            {% block main %}
                <div class="flex-grow-1 p-4">
                    {% block content %}{% endblock %}
                </div>
            {% endblock %}
        </main>
    {% endblock %}
</div>

{% block application_settings_modal %}
    <div class="modal fade" id="application-settings-modal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Application settings</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    {% block application_settings_content %}
                        <div class="form-check form-switch pt-3">
                            <input class="form-check-input" type="checkbox" id="toggle--dark-mode">
                            <label class="form-check-label" for="toggle--dark-mode">Dark mode</label>
                        </div>
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer_scripts %}
    <script type="application/javascript" nonce="{{ nonce }}">
        {% block javascript %}
            {% sw_include '@WebFrontendPackage/ui/_base/js/notifications.js' %}
            {% sw_include '@WebFrontendPackage/ui/_base/js/appearance.js' %}
            {% sw_include '@WebFrontendPackage/ui/_base/js/sidebar.js' %}
        {% endblock %}
    </script>
{% endblock %}

</body>
</html>
