<?xml version="1.0" ?>
<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <imports>
        <import resource="components/template.xml"/>
    </imports>
    <services>
        <defaults>
            <bind key="Psr\SimpleCache\CacheInterface" type="service" id="Heptacom\HeptaConnect\Portal\Base\Portal\Contract\PortalStorageInterface"/>
        </defaults>

        <prototype namespace="Heptacom\HeptaConnect\Package\WebFrontend\" resource="../../">
            <exclude>../../Components/Notification/Notification.php</exclude>
            <exclude>../../Components/Session/Session.php</exclude>
            <exclude>../../Components/Session/SessionStorage.php</exclude>
            <exclude>../../Components/Template</exclude>
            <exclude>../../Components/BootstrapTheme</exclude>
        </prototype>
        <service
            autowire="true"
            id="Heptacom\HeptaConnect\Package\WebFrontend\Components\ErrorHandler\HttpErrorHandlerMiddleware"
        >
            <argument key="$debugFriendlyErrorReport">%web_frontend_template_debug.html_error_renderer%</argument>
        </service>

        <service
            id="Heptacom\HeptaConnect\Package\WebFrontend\Components\AccessProtection\AccessProtectionService"
            autowire="true"
        >
            <argument type="tagged_iterator" tag="web_frontend.ui_handler"/>
        </service>

        <service
            id="Heptacom\HeptaConnect\Package\WebFrontend\Components\Session\SessionManagerInterface"
            class="Heptacom\HeptaConnect\Package\WebFrontend\Components\Session\SessionManager"
        >
            <argument
                type="service"
                id="Heptacom\HeptaConnect\Portal\Base\Portal\Contract\PortalStorageInterface"
            />
        </service>
        <service
            id="Heptacom\HeptaConnect\Package\WebFrontend\Components\Session\SessionManager"
            alias="Heptacom\HeptaConnect\Package\WebFrontend\Components\Session\SessionManagerInterface"
        />

        <service
            id="Heptacom\HeptaConnect\Package\WebFrontend\Components\View\AssetHandler"
            autowire="true"
        >
            <argument type="tagged_iterator" tag="web_frontend.theme"/>
        </service>

        <service id="Heptacom\HeptaConnect\Package\WebFrontend\Components\Notification\NotificationBag"/>
    </services>
</container>
