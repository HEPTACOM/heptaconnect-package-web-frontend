<?xml version="1.0" ?>
<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <imports>
        <import resource="components/template.xml"/>
    </imports>
    <services>
        <prototype namespace="Heptacom\HeptaConnect\Package\WebFrontend\" resource="../../">
            <exclude>../../Components/AccessProtection/AccessProtectionService.php</exclude>
            <exclude>../../Components/AccessProtection/AccessProtectionServiceInterface.php</exclude>
            <exclude>../../Components/Notification/Notification.php</exclude>
            <exclude>../../Components/Page</exclude>
            <exclude>../../Components/Session</exclude>
            <exclude>../../Components/Template</exclude>
            <exclude>../../Components/BootstrapTheme</exclude>
        </prototype>
        <service
            autowire="true"
            id="Heptacom\HeptaConnect\Package\WebFrontend\Components\ErrorHandler\HttpErrorHandlerMiddleware"
        >
            <argument key="$debugFriendlyErrorReport">%web_frontend_template_debug.html_error_renderer%</argument>
            <tag
                name="heptaconnect.http.handler.middleware"
                priority="1000"
            />
        </service>

        <service
            id="Heptacom\HeptaConnect\Package\WebFrontend\Components\AccessProtection\AccessProtectionServiceInterface"
            class="Heptacom\HeptaConnect\Package\WebFrontend\Components\AccessProtection\AccessProtectionService"
            autowire="true"
        >
            <argument key="$uiHandlers" type="tagged_iterator" tag="web_frontend.ui_handler"/>
            <argument key="$afterLoginPagePath">%web_frontend_page.after_login_page_path%</argument>
            <argument key="$afterLogoutPagePath">%web_frontend_page.after_logout_page_path%</argument>
            <tag
                name="heptaconnect.http.handler.middleware"
                priority="-3000"
            />
        </service>
        <service
            id="Heptacom\HeptaConnect\Package\WebFrontend\Components\AccessProtection\AccessLoginController"
            autowire="true"
        >
            <argument key="$afterLoginPagePath">%web_frontend_page.after_login_page_path%</argument>
        </service>

        <service id="Heptacom\HeptaConnect\Package\WebFrontend\Components\Notification\NotificationBag"/>
    </services>
</container>
