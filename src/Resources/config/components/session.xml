<?xml version="1.0" ?>
<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <prototype namespace="Heptacom\HeptaConnect\Package\WebFrontend\Components\Session\" resource="../../../Components/Session/">
            <exclude>../../../Components/Session/Contract/SessionInterface.php</exclude>
            <exclude>../../../Components/Session/Session.php</exclude>
        </prototype>

        <defaults
            autoconfigure="true"
            autowire="true"
        />

        <service id="Heptacom\HeptaConnect\Package\WebFrontend\Components\Session\SessionManager">
            <argument key="Psr\SimpleCache\CacheInterface" type="service" id="Heptacom\HeptaConnect\Portal\Base\Portal\Contract\PortalStorageInterface"/>
        </service>
    </services>
</container>
